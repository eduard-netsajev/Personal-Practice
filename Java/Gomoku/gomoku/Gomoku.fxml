<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox prefHeight="100.0" spacing="10.0">
         <children>
            <ChoiceBox fx:id="playerWChoiceBox" prefWidth="350.0"  />
            <ChoiceBox fx:id="playerBChoiceBox" prefWidth="350.0"  />
            <Button onMouseClicked="#newGame" text="New Game" />
         </children>
      </HBox>
   </top>
   <center>
      <GridPane fx:id="board">
      </GridPane>
   </center>
   <bottom>
      <AnchorPane>
         <children>
            <Label fx:id="statusLabel" AnchorPane.leftAnchor="0.0">
               <padding>
                  <Insets top="10.0" />
               </padding></Label>
            <Label fx:id="playerLabel" AnchorPane.rightAnchor="0.0">
               <padding>
                  <Insets top="10.0" />
               </padding></Label>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
